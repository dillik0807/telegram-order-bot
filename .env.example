# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# WhatsApp настройки (выберите один из вариантов)

# Вариант 1: Meta WhatsApp Cloud API
WHATSAPP_PHONE_ID=your_phone_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_RECIPIENT=+992900000000

# Вариант 2: Twilio
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
# TWILIO_WHATSAPP_TO=whatsapp:+992900000000

# Вариант 3: Отправка в Telegram группу (простой вариант для старта)
TELEGRAM_GROUP_ID=-1001234567890

# База данных
DB_PATH=./orders.db
